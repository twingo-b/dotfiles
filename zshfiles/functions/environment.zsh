# ghq
export GHQ_ROOT="$HOME/.ghq"

# dot
export DOT_REPO="https://github.com/twingo-b/dotfiles.git"
export DOT_DIR="$HOME/.ghq/github.com/twingo-b/dotfiles"

# homebrew
# http://qiita.com/ykirishima/items/f85902c6039f07d07d48
export PATH=/usr/local/bin:/usr/local/sbin:$PATH

# set language environment
export LANG=en_US.UTF-8
export LC_CTYPE=en_US.UTF-8

# set the default program
export EDITOR=vim

# mysql
export MYSQL_HISTFILE="$HOME/.mysql/mysql_history"

# gopath
export GOPATH="$HOME/.go"
export PATH=$GOPATH/bin:$PATH

# openssl
export PATH="/usr/local/opt/openssl/bin:$PATH"

# curl
export PATH="/usr/local/opt/curl/bin:$PATH"
